{
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./declarations"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"]
    },

    "skipLibCheck": true
  }
}
